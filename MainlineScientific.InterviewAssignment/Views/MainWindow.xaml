<Window x:Class="MainlineScientific.InterviewAssignment.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainlineScientific.InterviewAssignment.Views"
        mc:Ignorable="d"
        Title="WPF Countdown Timer" Height="450" Width="800">
    <Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnRunComplexOp" Margin="20" Height="100" Background="White" Click="btnRunComplexOp_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/complexoperation.jpg" Height="100" Margin="5"/>
                        <TextBlock Text="Run a complex operation" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 20 0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
    </Grid>
</Window>
